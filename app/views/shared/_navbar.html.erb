<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.admin %>
          <li class="nav-item <%= "active" if current_page?(courses_path)%>">
            <%= link_to "Liste des cours", courses_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= "active" if current_page?(new_course_path)%>">
            <%= link_to "Ajouter un cours", new_course_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Me déconnecter",  destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else%>
          <li class="nav-item <%= "active" if current_page?(root_path)%>">
            <%= link_to "Page d'accueil", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= "active" if current_page?( own_bookings_path)%>">
            <%= link_to "Mes réservations", own_bookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Me déconnecter",  destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item <%= "active" if current_page?(new_user_registration_path)%> ">
          <%= link_to "M'inscrire", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= "active" if current_page?(new_user_session_path)%>">
          <%= link_to "Me connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
